<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FSULesson1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="78dp">


        <FrameLayout style="@style/LessonHeaderStyle">

            <ImageButton
                style="@style/BackButtonStyle"
                android:src="@drawable/strelka"
                android:onClick="toCard1"/>

            <TextView
                style="@style/LessonHeaderTextStyle"
                android:text="Формулы\nсокращенного\nумножения" />
        </FrameLayout>

        <TextView
            style="@style/ClassNumStyle"
            android:text="Урок 1" />

        <View style="@style/StripStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_profile_pic"
            android:backgroundTint="@color/BackGrey"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_button_border"
                    android:fontFamily="@font/days_one"
                    android:text="Тесты"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19sp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/poppins"
                android:text=" Формулы сокращённого умножения — это готовые формулы, по которым можно представить некоторые выражения в виде произведения и наоборот — некоторые произведения в виде выражения, не раскрывая скобки и не приводя подобные слагаемые."
                android:textAlignment="center"
                android:justificationMode="inter_word"
                android:textColor="@color/colorTextLesson"
                android:textSize="20dp" />

        </FrameLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>