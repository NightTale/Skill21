<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FSULesson2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="78dp">


        <FrameLayout style="@style/LessonHeaderStyle">

            <ImageButton
                style="@style/BackButtonStyle"
                android:src="@drawable/strelka"
                android:onClick="toCard1"/>

            <TextView
                style="@style/LessonHeaderTextStyle"
                android:text="Вторая тема"/>
        </FrameLayout>

        <TextView
            style="@style/ClassNumStyle"
            android:text="Урок 1" />

        <View style="@style/StripStyle" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_profile_pic"
                android:backgroundTint="@color/BackGrey"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/edit_button_border"
                        android:fontFamily="@font/days_one"
                        android:text="Тест"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:onClick="toFSUTest2"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/textfsu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/poppins"
                    android:justificationMode="inter_word"
                    android:text="Второй текст"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextLesson"
                    android:textSize="20dp" />
                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textfsu1">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/edit_button_border"
                            android:fontFamily="@font/days_one"
                            android:text="Тест"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:onClick="toFSUTest2"/>
                    </FrameLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>